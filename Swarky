        End Try
    End Sub
    Private Sub SwarkedFileToolStripMenuItem_Click(sender As Object, e As EventArgs) Handles SwarkedFileToolStripMenuItem.Click

        Try
            MatchFileName = Rivedere.SelectedItems(0).Text
            Call Sub() TifLocation()
